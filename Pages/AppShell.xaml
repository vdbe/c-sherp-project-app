<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="c_sherp_project_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:c_sherp_project_app"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Play" Icon="{StaticResource IconPlay}">
            <ShellContent
                Title="Play"
                ContentTemplate="{DataTemplate local:PlayPage}"
                Route="PlayPage" /> 
        </Tab>
        <Tab Title="Submit" Icon="{StaticResource IconSubmit}">
            <ShellContent
                Title="Submit"
                ContentTemplate="{DataTemplate local:SubmitPage}"
                Route="SubmitPage" />
        </Tab>
        <Tab Title="Leaderboard" Icon="{StaticResource IconLeaderboard}">
            <ShellContent
                Title="Leaderboard"
                ContentTemplate="{DataTemplate local:LeaderBoardPage}"
                Route="LeaderBoardPage" />
        </Tab>
    </TabBar>

</Shell>
