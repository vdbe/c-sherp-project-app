<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:c_sherp_project_app"
             x:Class="c_sherp_project_app.PlayPage">

        <!-- NOTE: Still a small cutoff at the top of each image -->
        <FlexLayout Direction="Column" AlignItems="Center">
            <Label FlexLayout.Basis="5%" Text="" />
            <ImageButton Source="icon_rock.png"
                         Clicked="OnRockClicked"
                         FlexLayout.Grow="1"
                         Aspect="AspectFill" />
            <Label FlexLayout.Basis="10%" Text="" />
            <ImageButton Source="icon_paper.png"
                         Clicked="OnPaperClicked"
                         FlexLayout.Grow="1"
                         Aspect="AspectFill" />
            <Label FlexLayout.Basis="10%" Text="" />
            <ImageButton Source="icon_scissors.png"
                         Clicked="OnScissorsClicked"
                         FlexLayout.Grow="1"
                         Aspect="AspectFill" />
            <Label FlexLayout.Basis="5%" Text="" />
        </FlexLayout>

</ContentPage>
